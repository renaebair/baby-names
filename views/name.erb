<div class='name'>
  <span class='baby_name'><%= name.name %></span>

  <%= clearfix %>

	<div class='voting'>
		<% if voted_for?(name) %>
      <span class='vote'><%= name.average_vote %></span>
    <% else %>
			<% (1..5).each do |number| %>
				<form action="/<%= name.id %>/vote/<%= number %>" method='post'>
		      <input type='submit' value='<%= number %>'>
		    </form>
			<% end %>
		<% end %>
	</div>

  <a href='/<%= name.id %>/comments'>
    <%= name.comments.size > 0 ? "Comments (#{name.comments.size})" : "New Comment" %>
  </a>

	<% if logged_in? %>
    <div class='admin'>
      <form action="/<%= name.id %>" method='post'>
        <input type='hidden' name="_method" value="delete">
        <input type='submit' value='[x]'>
      </form>
    </div>
  <% end %>


</div>
