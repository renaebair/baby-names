<% if current_user && current_user.lists.include?(@list) %>
  <form action="/list/<%= @list.url %>" method='POST' class='list_form'>
    <input type='hidden' name="_method" value="put" />
    
    <h3>namingtogether.com/lists/<input type="text" name="list_url" id="list_url" value="<%= @list.url %>" /> <input type="submit" value="Change"/></h3>
  </form>
  <form action="/lists/<%= @list.url %>" method='POST'>
    <input type='hidden' name="_method" value="delete">
    <input type='submit' value='[x]'>
  </form>
<% else %>
  <h3>namingtogether.com/lists/<%= @list.url %></h3>
<% end %>
<br/>
<div id='names'>
  <div id='male-names'>
    <h2>Boy Names</h2>
    <%= partial(:name_form, :locals => {:gender => 'male'}) %>
		<%= partial(:name, :collection => @male_names) %>
  </div>

  <div id='female-names'>
    <h2>Girl Names</h2>
    <%= partial(:name_form, :locals => {:gender => 'female'}) %>
		<%= partial(:name, :collection => @female_names) %>
  </div>
</div>
<br/>

